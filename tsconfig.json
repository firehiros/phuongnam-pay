{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "ignore": [
    "build",
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "types": [
    "jest"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
